<div id="home">
  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo"> Scraper of News</a>
      <a href="/" data-target="mobile-demo" class="sidenav-trigger"><i id="hamburger" class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li><a href="/">Home</a></li>
        <li><a href="/saved">Saved Articles</a></li>
        <li><a class="waves-effect waves-teal btn-large clearSaved">!!!CLEAR ALL SAVED ARTICLES!!!</a></li>
      </ul>
    </div>
  </nav>

  <ul class="sidenav" id="mobile-demo">
    <li><a href="/">Home</a></li>
    <li><a href="/saved">Saved Articles</a></li>
    <li><a class="waves-effect waves-teal btn-large clearSaved">!!!DELETE ALL SAVED ARTICLES!!!</a></li>
  </ul>

  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        {{#each article}}
          <div data-id="{{this.id}}" class="card-content white-text" >
            <a class="list-new-article card-title" href='{{this.link}}' target="_blank">{{this.title}}</a>
            <p>{{this.summary}}</p>
            <br>
            <button id="unsaveArticle" class="btn waves-effect waves-teal float-right delete">UNSAVE ARTICLE</button>
            {{!-- Modal button --}}
            <button id="modalButton" data-target="modal1" class="waves-effect waves-teal btn modal-trigger">NOTES</button>
            <!-- Modal Structure -->
            <div id="modal1" class="modal">
              <h4 class="teal-text">Article Notes</h4>
              <h5 class="teal-text">{{this.title}}</h3>
              <textarea id="noteBody" placeholder="New Note" rows="4" cols="60"></textarea>
              <div class="modal-footer">
                <button id="saveNote" class="btn waves-effect waves-teal float-right delete">Save Note</button>
              </div>
              <div id="allNotes" class="card blue-grey darken-1"></div>
            </div>
          </div>
          <hr>
        {{/each}}
      </div>
    </div>
  </div>
</div>


<!-- Compiled and minified JavaScript at end of body for optimized loading -->
