<div id="home">
  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo"> Scraper of News</a>
      <a href="/" data-target="mobile-demo" class="sidenav-trigger"><i id="hamburger" class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li><a href="/">Home</a></li>
        <li><a href="/saved">Saved Articles</a></li>
        <li><a class="waves-effect waves-light btn-large clearArticles">CLEAR ARTICLES!</a></li>
      </ul>
    </div>
  </nav>

  <ul class="sidenav" id="mobile-demo">
    <li><a href="/">Home</a></li>
    <li><a href="/saved">Saved Articles</a></li>
    <li><a id="scrapeArticles" class="waves-effect waves-light btn-large">SCRAPE NEW ARTICLES!</a></li>
    <li><a class="waves-effect waves-light btn-large clearArticles">CLEAR ARTICLES!</a></li>
  </ul>

  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        {{#each article}}
          <div data-id="{{this.id}}" class="card-content white-text" >
            <a class="list-new-article card-title" href='{{this.link}}' target="_blank">{{this.title}}</a>
            <p>{{this.summary}}</p>
            <br>
            <button id="unsaveArticle" class="btn btn-danger float-right delete">UNSAVE ARTICLE</button>

            <a class="waves-effect waves-light btn modal-trigger" href="#modal1">NOTES</a>
            <!-- Modal Structure -->
            <div class="modal">
              {{#each notes}}
                <div class="modal-content">
                  <h4>Notes For Article: {{this.title}}</h4>
                  <p>{{this.notes}}</p>
                  <br>
                  <button id="deleteNote" class="btn btn-danger float-right delete">Save Note</button>
                </div>
              {{/each}}
              <textarea placeholder="New Note" rows="4" cols="60"></textarea>
              <div class="modal-footer">
                <button id="saveNote" class="btn btn-danger float-right delete">Save Note</button>
              </div>
            </div>
          </div>
          <hr>
        {{/each}}
      </div>
    </div>
  </div>
</div>


<!-- Compiled and minified JavaScript at end of body for optimized loading -->
