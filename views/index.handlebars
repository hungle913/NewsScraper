<div id="home">
  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo"> Scraper of News</a>
      <a href="/" data-target="mobile-demo" class="sidenav-trigger"><i id="hamburger" class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li><a href="/">Home</a></li>
        <li><a href="/saved">Saved Articles</a></li>
        <li><a class="waves-effect waves-light btn-large">SCRAPE NEW ARTICLES!</a></li>
        <li><a class="waves-effect waves-light btn-large">CLEAR ARTICLES!</a></li>
      </ul>
    </div>
  </nav>
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        {{#each article}}
            <div class="card-content white-text">
                <span data-id="{{this.id}}" class="list-new-article card-title"><a>{{this.title}}</a></span>
                <p>{{this.text}}</p>
            </div>
            <div class="card-action">
                <button id="saveArticle" class="btn btn-danger float-right delete">Save Article</button>
            </div>
        {{/each}}
      </div>
    </div>
  </div>

</div>


<!-- Compiled and minified JavaScript at end of body for optimized loading -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="/js/index.js"></script>